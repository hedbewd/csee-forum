<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="board">
 	<select id="selectAll" resultType="boardVO">
 		SELECT * FROM forum_board ORDER BY no DESC
 	</select>
 	
<!--     <select id="getDateFormat" resultType="boardVO">
    	SELECT date FROM forum_board WHERE no=#{no}
    </select> -->
    
    <select id="count" resultType="Integer">
    	SELECT 
    		COUNT(*)
    	FROM
    		forum_board
    </select>
    
    <select id="selectOne" resultType="boardVO">
    	SELECT
    		*
    	FROM
    		forum_board
    	WHERE
    		no = #{no}
    </select>
    
    <insert id="writePost">
    	INSERT INTO 
    		forum_board (no, title, author, content) 
   		VALUES
   			(#{no}, #{title}, #{author}, #{content})
    </insert>
    
    <update id="countViews">
    	UPDATE
    		forum_board
    	SET
    		views = views + 1
   		WHERE
   			no = #{no}
    		
    </update>
</mapper>